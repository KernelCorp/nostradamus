= form_for [category, question, answer], {html: {class: 'form-horizontal'}} do |f|
  - if answer.errors.any?
    #error_explanation
      %ul
        - answer.errors.full_messages.each do |msg|
          %li= msg
  .row
    .radio.col-xs-2
      %label
        = f.radio_button :value, 1, :required => true
        Да
    .radio.col-xs-2
      %label
        = f.radio_button :value, 0, :required => true
        Нет

    .col-xs-2
      = f.submit 'OK', :class => 'btn btn-default'
