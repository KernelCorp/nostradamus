= form_for [category, question, answer] do |f|
  - if answer.errors.any?
    #error_explanation
      %ul
        - answer.errors.full_messages.each do |msg|
          %li= msg
  = f.hidden_field :value, value: value ? 1 : 0
  = f.button type: :submit, class: "btn-lg  btn-default #{value ? 'yes' : 'no'}", title: (value ? 'Да' : 'Нет') do
    -if value
      %i.glyphicon.glyphicon-thumbs-up
    -else
      %i.glyphicon.glyphicon-thumbs-down