%h2.text-center=@category.name

.row
  .col-md-6.col-md-offset-3
    = form_for([@category, @question], {html: {class: 'form-horizontal'}}) do |f|
      - if @question.errors.any?
        #error_explanation
          %h2
            = pluralize(@question.errors.count, "error")
            prohibited this question from being saved:

          %ul
            - @question.errors.full_messages.each do |msg|
              = msg

      .form-group
        = f.label :title, :class => 'col-sm-3'
        .col-sm-9
          = f.text_field :title, :class => 'form-control'

      .form-group
        = f.label :text, :class => 'col-sm-3'
        .col-sm-9
          = f.text_area :text, :class => 'form-control'

      .form-group
        = f.label :start_date, :class => 'col-sm-3'
        .col-sm-9
          = f.text_field :start_date, {:class => 'form-control', :type => 'date'}

      .form-group
        = f.label :end_date, :class => 'col-sm-3'
        .col-sm-9
          = f.text_field :end_date, {:class => 'form-control', :type => 'date'}



      .form-group
        = f.label :image, :class => 'col-sm-3'
        .col-sm-9
          = f.file_field :image


      .form-group
        .col-sm-9.col-sm-offset-3
          = f.submit :class => 'btn btn-default'
