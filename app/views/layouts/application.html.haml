!!!
%html

  %head
    %meta{:charset => 'utf-8'}
    %title Page title
    = stylesheet_link_tag 'application'


  %body

    %nav{class: 'navbar navbar-default navbar-fixed-top', role: 'navigation'}
      .container-fluid
        .navbar-header
          %button.navbar-toggle{:type => 'button', 'data-toggle' => 'collapse', 'data-target' => '#main-navbar'}
            %span{:class=> 'sr-only'}Toggle navigation
            %span{:class=> 'icon-bar'}
            %span{:class=> 'icon-bar'}
            %span{:class=> 'icon-bar'}
          %a.navbar-brand{:href=>'/'}
            Nostradamus


        #main-navbar.collapse.navbar-collapse
          %ul{:class => 'nav navbar-nav'}
            %li
              %a{:href => '#'}
                some link

          %ul{:class => 'nav navbar-nav navbar-right'}
            - if user_signed_in?
              %li= link_to "#{current_user.username} (#{current_user.provider})", current_user.url
              %li= link_to "Sign out", destroy_user_session_path, :method => :delete
            - if !user_signed_in?
              %li= link_to "Sign in with Vkontakte", user_omniauth_authorize_path(:vkontakte)
    #main_wrapper
      #nav_spacer
      .container
        = yield

      #footer_spacer
      #footer
        %div
          some text

